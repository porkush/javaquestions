import java.util.Random;
import java.util.Scanner;
public class Rockpaperscissorgame {
    public static void main(String[]args){
        Scanner S = new Scanner(System.in);
        Random ran= new Random();
        System.out.println("1-scissor");
        System.out.println("2-rock");
        System.out.println("3-paper");
        int a = S.nextInt();
        int comp = ran.nextInt(3) + 1;
        System.out.println("computer has choose the move, now it's your turn");
        if (a==1||a==2||a==3){
            System.out.println("let's see the results");}
        else{
            System.out.println("invalid move try again");
        }
        System.out.println("computer move:" + comp);
        if(a==2){
            if (comp==3){
                System.out.println("computer won");
            }
            else if(comp==1){
                System.out.println("congratulations you won");
            }}
        else if(a==1){
            if(comp==2){
                System.out.println("computer won");
            }
            else if(comp==3){
                System.out.println("you won");
            }}
        else if (a==3) {
            if(comp==1){
                System.out.println("computer won");
            }
            else if (comp==2){
                System.out.println("you won ");
        }
        }
        else if(a==comp){
                System.out.println("ohh what a coincidence you and computer are same, play again");
            }
        }
        }
